<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.GeneralSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:common="using:CCEM.Common"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:CCEM"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="using:CommunityToolkit.WinUI"
      xmlns:views="using:CCEM.Views"
      dev:BreadcrumbNavigator.IsHeaderVisible="True"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">

            <controls:SettingsCard Description="Automatically launch app when you log in to Windows"
                                   Header="Run at startup"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE768;}">
                <ToggleSwitch IsOn="{x:Bind dev:StartupHelper.IsAppStartupWithWindowsForXamlBindingEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </controls:SettingsCard>

            <controls:SettingsCard Header="Update channel"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE8AB;}">
                <StackPanel Spacing="8">
                    <ToggleSwitch IsOn="{x:Bind ViewModel.IsBetaChannelSelected, Mode=TwoWay}"
                                  OffContent="Stable builds"
                                  OnContent="Beta builds"
                                  ToolTipService.ToolTip="Beta builds include the latest changes but may be less stable." />
                    <TextBlock Style="{StaticResource SecondaryTextStyle}"
                               Text="Switch to beta builds to receive pre-release updates distributed as GitHub pre-releases." />
                    <TextBlock Style="{StaticResource SecondaryTextStyle}"
                               Text="{x:Bind ViewModel.ChannelDisplayText, Mode=OneWay}" />
                    <TextBlock FontStyle="Italic"
                               Foreground="{ThemeResource SystemFillColorAttentionBrush}"
                               Text="Restart CCEM to apply the channel change."
                               TextWrapping="Wrap"
                               Visibility="{x:Bind ViewModel.RestartWarningVisibility, Mode=OneWay}" />
                </StackPanel>
            </controls:SettingsCard>

            <controls:SettingsExpander Description="Help us improve this app by sharing optional diagnostics data to inform bug fixes, performance, and feature enhancements"
                                       Header="Diagnostics &amp; feedback (Restart Required)"
                                       HeaderIcon="{ui:FontIcon Glyph=&#xEC7A;}">
                <ToggleSwitch IsOn="{x:Bind common:AppHelper.Settings.UseDeveloperMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <controls:SettingsExpander.ItemsHeader>
                    <HyperlinkButton HorizontalAlignment="Stretch"
                                     HorizontalContentAlignment="Left"
                                     Click="NavigateToLogPath_Click"
                                     Content="{x:Bind common:Constants.LogDirectoryPath}" />
                </controls:SettingsExpander.ItemsHeader>
            </controls:SettingsExpander>

        </StackPanel>
    </ScrollView>
</Page>
