<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmServiceWindowsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmServiceWindowsViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Spacing="8">
            <Button Command="{x:Bind ViewModel.RefreshCommand}"
                    Content="Refresh" />
            <ComboBox SelectedIndex="{x:Bind ViewModel.ScopeIndex, Mode=TwoWay}"
                      Width="160">
                <ComboBoxItem Content="Requested Config" />
                <ComboBoxItem Content="Actual Config" />
            </ComboBox>
            <ProgressRing Width="20"
                          Height="20"
                          IsActive="{x:Bind ViewModel.IsLoading}" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="8">
            <TextBox Width="420"
                     Header="Schedules"
                     PlaceholderText="Schedule ID(s) string"
                     Text="{x:Bind ViewModel.NewSchedules, Mode=TwoWay}" />
            <NumberBox Width="140"
                       Header="Type"
                       Minimum="1"
                       Maximum="6"
                       Value="{x:Bind ViewModel.NewServiceWindowType, Mode=TwoWay}" />
            <Button VerticalAlignment="Bottom"
                    Command="{x:Bind ViewModel.CreateCommand}"
                    Content="Create" />
            <Button VerticalAlignment="Bottom"
                    Command="{x:Bind ViewModel.DeleteSelectedCommand}"
                    Content="Delete selected (requested)" />
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Opacity="0.7"
                   Text="{x:Bind ViewModel.StatusMessage}" />

        <ListView Grid.Row="3"
                  ItemsSource="{x:Bind ViewModel.ServiceWindows}"
                  SelectedItem="{x:Bind ViewModel.SelectedServiceWindow, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmServiceWindowRow">
                    <StackPanel Spacing="2">
                        <TextBlock FontWeight="SemiBold"
                                   Text="{x:Bind ServiceWindowId}" />
                        <TextBlock Opacity="0.7"
                                   Text="{x:Bind ServiceWindowType}" />
                        <TextBlock Opacity="0.7"
                                   Text="{x:Bind Schedules}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

