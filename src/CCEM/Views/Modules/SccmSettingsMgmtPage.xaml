<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmSettingsMgmtPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmSettingsMgmtViewModel">

    <Grid Padding="{StaticResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{StaticResource PageHeaderMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Text="Settings Management" />
            <TextBlock Style="{StaticResource PageSubtitleStyle}"
                       Text="Compare requested vs actual SCCM client configuration." />
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource InfoBarAreaStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource PrimaryCommandButtonStyle}"
                        Command="{x:Bind ViewModel.RefreshCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>

                <ToggleSwitch Grid.Column="1"
                              IsOn="{x:Bind ViewModel.ShowDifferencesOnly, Mode=TwoWay}"
                              OffContent="All"
                              OnContent="Differences only"
                              Margin="16,0,0,0" />

                <ProgressRing Grid.Column="2"
                              Width="20" Height="20"
                              IsActive="{x:Bind ViewModel.IsLoading}"
                              Margin="16,0,0,0" />

                <TextBlock Grid.Column="3"
                           Style="{StaticResource StatusTextStyle}"
                           Text="{x:Bind ViewModel.StatusMessage}" />
            </Grid>
        </Border>

        <!-- Components List -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Components}"
                  SelectionMode="Single"
                  Margin="0,8,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmComponentConfigRow">
                    <Grid Padding="8,12" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Component Icon -->
                        <FontIcon Glyph="&#xE713;"
                                  FontSize="20"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        <!-- Component Info -->
                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                       Text="{x:Bind ComponentName}" />
                            <TextBlock Style="{StaticResource ListItemSubtitleStyle}"
                                       Text="{x:Bind Status}" />
                        </StackPanel>

                        <!-- Requested State -->
                        <StackPanel Grid.Column="2" Spacing="2" MinWidth="100">
                            <TextBlock Text="Requested"
                                       Style="{StaticResource ListItemSubtitleStyle}" />
                            <TextBlock Text="{x:Bind RequestedEnabled}"
                                       FontWeight="SemiBold" />
                        </StackPanel>

                        <!-- Actual State -->
                        <StackPanel Grid.Column="3" Spacing="2" MinWidth="100">
                            <TextBlock Text="Actual"
                                       Style="{StaticResource ListItemSubtitleStyle}" />
                            <TextBlock Text="{x:Bind ActualEnabled}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

