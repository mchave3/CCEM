<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmSettingsMgmtPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmSettingsMgmtViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Spacing="8">
            <Button Command="{x:Bind ViewModel.RefreshCommand}"
                    Content="Refresh" />
            <ToggleSwitch IsOn="{x:Bind ViewModel.ShowDifferencesOnly, Mode=TwoWay}"
                          Header="Differences only" />
            <ProgressRing Width="20"
                          Height="20"
                          IsActive="{x:Bind ViewModel.IsLoading}" />
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Opacity="0.7"
                   Text="{x:Bind ViewModel.StatusMessage}" />

        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Components}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmComponentConfigRow">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold"
                                       Text="{x:Bind ComponentName}" />
                            <TextBlock Opacity="0.7"
                                       Text="{x:Bind Status}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{x:Bind RequestedEnabled}" />
                            <TextBlock Opacity="0.7"
                                       Text="{x:Bind ActualEnabled}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

