<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmSoftwareUpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmSoftwareUpdatesViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal"
                        Spacing="8">
                <Button Command="{x:Bind ViewModel.RefreshCommand}"
                        Content="Refresh" />
                <ToggleSwitch IsOn="{x:Bind ViewModel.ShowAll, Mode=TwoWay}"
                              Header="Show all updates"
                              OffContent="Required only"
                              OnContent="All" />
                <Button Command="{x:Bind ViewModel.InstallAllRequiredCommand}"
                        Content="Install required" />
                <Button Command="{x:Bind ViewModel.InstallAllApprovedCommand}"
                        Content="Install approved" />
                <Button Command="{x:Bind ViewModel.InstallSelectedCommand}"
                        Content="Install selected" />
                <ProgressRing Width="20"
                              Height="20"
                              IsActive="{x:Bind ViewModel.IsLoading}" />
            </StackPanel>
            <TextBlock Opacity="0.7"
                       Text="{x:Bind ViewModel.StatusMessage}" />
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Updates}"
                  SelectedItem="{x:Bind ViewModel.SelectedUpdate, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmSoftwareUpdateRow">
                    <StackPanel Spacing="2">
                        <TextBlock FontWeight="SemiBold"
                                   Text="{x:Bind Name}" />
                        <TextBlock Opacity="0.7"
                                   Text="{x:Bind Publisher}" />
                        <TextBlock Opacity="0.7"
                                   Text="{x:Bind EvaluationStateText}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

