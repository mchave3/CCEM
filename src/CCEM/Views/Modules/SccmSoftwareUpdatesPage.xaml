<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmSoftwareUpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmSoftwareUpdatesViewModel">

    <Grid Padding="{StaticResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{StaticResource PageHeaderMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Text="Software Updates" />
            <TextBlock Style="{StaticResource PageSubtitleStyle}"
                       Text="View and install pending software updates on the remote computer." />
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource InfoBarAreaStyle}">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallSpacing}">
                    <Button Style="{StaticResource PrimaryCommandButtonStyle}"
                            Command="{x:Bind ViewModel.RefreshCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                            <TextBlock Text="Refresh" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource CommandButtonStyle}"
                            Command="{x:Bind ViewModel.InstallAllRequiredCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" FontSize="14" />
                            <TextBlock Text="Install Required" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource CommandButtonStyle}"
                            Command="{x:Bind ViewModel.InstallAllApprovedCommand}"
                            Content="Install Approved" />
                    <Button Style="{StaticResource CommandButtonStyle}"
                            Command="{x:Bind ViewModel.InstallSelectedCommand}"
                            Content="Install Selected" />
                    <ProgressRing Width="20" Height="20"
                                  IsActive="{x:Bind ViewModel.IsLoading}"
                                  Margin="8,0,0,0" />
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ToggleSwitch IsOn="{x:Bind ViewModel.ShowAll, Mode=TwoWay}"
                                  OffContent="Required only"
                                  OnContent="Show all updates"
                                  Margin="0,0,16,0" />

                    <TextBlock Grid.Column="1"
                               Style="{StaticResource StatusTextStyle}"
                               Text="{x:Bind ViewModel.StatusMessage}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                </Grid>
            </Grid>
        </Border>

        <!-- Updates List -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Updates}"
                  SelectedItem="{x:Bind ViewModel.SelectedUpdate, Mode=TwoWay}"
                  SelectionMode="Single"
                  Margin="0,8,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmSoftwareUpdateRow">
                    <Grid Padding="8,12" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Update Icon -->
                        <FontIcon Glyph="&#xE895;"
                                  FontSize="20"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        <!-- Update Info -->
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                       Text="{x:Bind Name}"
                                       TextWrapping="WrapWholeWords"
                                       MaxLines="2" />
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Style="{StaticResource ListItemSubtitleStyle}"
                                           Text="{x:Bind Publisher}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border Grid.Column="2" Style="{StaticResource BadgeStyle}">
                            <TextBlock Text="{x:Bind EvaluationStateText}"
                                       FontSize="12"
                                       FontWeight="SemiBold" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

