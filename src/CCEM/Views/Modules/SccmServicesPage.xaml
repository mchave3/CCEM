<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmServicesViewModel">
    
    <Grid Padding="{StaticResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{StaticResource PageHeaderMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Text="Services" />
            <TextBlock Style="{StaticResource PageSubtitleStyle}"
                       Text="View and manage Windows services on the remote computer." />
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource InfoBarAreaStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallSpacing}">
                    <Button Style="{StaticResource PrimaryCommandButtonStyle}"
                            Command="{x:Bind ViewModel.RefreshCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                            <TextBlock Text="Refresh" />
                        </StackPanel>
                    </Button>
                    <ProgressRing Width="20" Height="20"
                                  IsActive="{x:Bind ViewModel.IsLoading}"
                                  Margin="8,0,0,0" />
                </StackPanel>
                
                <TextBlock Grid.Column="1"
                           Style="{StaticResource StatusTextStyle}"
                           Text="{x:Bind ViewModel.StatusMessage}" />
            </Grid>
        </Border>

        <!-- Services List -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Services}"
                  SelectionMode="Single"
                  Margin="0,8,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmServiceRow">
                    <Grid Padding="8,12" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Icon -->
                        <FontIcon Glyph="&#xE8B7;"
                                  FontSize="20"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        
                        <!-- Service Info -->
                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                       Text="{x:Bind DisplayName}" />
                            <TextBlock Style="{StaticResource ListItemSubtitleStyle}"
                                       Text="{x:Bind Name}" />
                        </StackPanel>
                        
                        <!-- Status Badge -->
                        <Border Grid.Column="2" Style="{StaticResource BadgeStyle}">
                            <TextBlock Text="{x:Bind State}"
                                       FontSize="12"
                                       FontWeight="SemiBold" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

