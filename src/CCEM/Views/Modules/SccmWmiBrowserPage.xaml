<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmWmiBrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmWmiBrowserViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal"
                        Spacing="8">
                <TextBox Width="260"
                         Text="{x:Bind ViewModel.WmiNamespace, Mode=TwoWay}"
                         Header="Namespace" />
                <ToggleSwitch IsOn="{x:Bind ViewModel.UseCim, Mode=TwoWay}"
                              Header="Use CIM"
                              OffContent="WMI"
                              OnContent="CIM" />
                <Button Command="{x:Bind ViewModel.RunQueryCommand}"
                        Content="Run" />
                <ProgressRing Width="20"
                              Height="20"
                              IsActive="{x:Bind ViewModel.IsLoading}" />
                <TextBlock VerticalAlignment="Center"
                           Opacity="0.7"
                           Text="{x:Bind ViewModel.StatusMessage}" />
            </StackPanel>
            <TextBox Text="{x:Bind ViewModel.WqlQuery, Mode=TwoWay}"
                     Header="WQL Query"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     MinHeight="80" />
        </StackPanel>

        <Grid Grid.Row="1"
              ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <ListView ItemsSource="{x:Bind ViewModel.Results}"
                      SelectedItem="{x:Bind ViewModel.SelectedResult, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:WmiResultRow">
                        <TextBlock Text="{x:Bind Display}"
                                   TextWrapping="WrapWholeWords" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ListView Grid.Column="1"
                      ItemsSource="{x:Bind ViewModel.SelectedProperties}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:WmiPropertyRow">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold"
                                       Text="{x:Bind Name}" />
                            <TextBlock FontFamily="Consolas"
                                       Opacity="0.8"
                                       Text="{x:Bind Value}"
                                       TextWrapping="WrapWholeWords" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

