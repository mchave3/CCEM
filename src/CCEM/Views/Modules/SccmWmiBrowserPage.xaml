<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmWmiBrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmWmiBrowserViewModel">

    <Grid Padding="{StaticResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{StaticResource PageHeaderMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Text="WMI Browser" />
            <TextBlock Style="{StaticResource PageSubtitleStyle}"
                       Text="Execute WQL queries against the remote computer's WMI/CIM repository." />
        </StackPanel>

        <!-- Query Panel -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel Spacing="{StaticResource MediumSpacing}">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{x:Bind ViewModel.WmiNamespace, Mode=TwoWay}"
                             Header="Namespace"
                             PlaceholderText="root\cimv2" />

                    <ToggleSwitch Grid.Column="1"
                                  IsOn="{x:Bind ViewModel.UseCim, Mode=TwoWay}"
                                  OffContent="WMI"
                                  OnContent="CIM"
                                  VerticalAlignment="Bottom"
                                  Margin="0,0,0,4" />

                    <Button Grid.Column="2"
                            Style="{StaticResource PrimaryCommandButtonStyle}"
                            Command="{x:Bind ViewModel.RunQueryCommand}"
                            VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;" FontSize="14" />
                            <TextBlock Text="Run Query" />
                        </StackPanel>
                    </Button>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,8">
                        <ProgressRing Width="20" Height="20"
                                      IsActive="{x:Bind ViewModel.IsLoading}" />
                    </StackPanel>
                </Grid>

                <TextBox Text="{x:Bind ViewModel.WqlQuery, Mode=TwoWay}"
                         Header="WQL Query"
                         PlaceholderText="SELECT * FROM Win32_OperatingSystem"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontFamily="Cascadia Code, Consolas"
                         MinHeight="80" />

                <TextBlock Style="{StaticResource StatusTextStyle}"
                           Text="{x:Bind ViewModel.StatusMessage}" />
            </StackPanel>
        </Border>

        <!-- Results Split View -->
        <Grid Grid.Row="2" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Results List -->
            <Border Style="{StaticResource CardStyle}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Results"
                               Style="{StaticResource SectionTitleStyle}"
                               Margin="16,12,16,8" />

                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.Results}"
                              SelectedItem="{x:Bind ViewModel.SelectedResult, Mode=TwoWay}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:WmiResultRow">
                                <Grid Padding="8,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Glyph="&#xE9D9;"
                                              FontSize="16"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              Margin="0,0,12,0" />

                                    <TextBlock Grid.Column="1"
                                               Text="{x:Bind Display}"
                                               Style="{StaticResource ListItemTitleStyle}"
                                               TextWrapping="WrapWholeWords" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Properties Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Properties"
                               Style="{StaticResource SectionTitleStyle}"
                               Margin="16,12,16,8" />

                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.SelectedProperties}"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:WmiPropertyRow">
                                <Grid Padding="8,10">
                                    <StackPanel Spacing="4">
                                        <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                                   Text="{x:Bind Name}" />
                                        <TextBlock FontFamily="Cascadia Code, Consolas"
                                                   FontSize="12"
                                                   Opacity="0.8"
                                                   Text="{x:Bind Value}"
                                                   TextWrapping="WrapWholeWords"
                                                   IsTextSelectionEnabled="True" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

