<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmCachePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmCacheViewModel">

    <Grid Padding="{StaticResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{StaticResource PageHeaderMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Text="Cache" />
            <TextBlock Style="{StaticResource PageSubtitleStyle}"
                       Text="Manage the SCCM client cache. Clean up orphaned content or remove specific items." />
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource InfoBarAreaStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallSpacing}">
                    <Button Style="{StaticResource PrimaryCommandButtonStyle}"
                            Command="{x:Bind ViewModel.RefreshCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                            <TextBlock Text="Refresh" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource CommandButtonStyle}"
                            Command="{x:Bind ViewModel.CleanupOrphansCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" FontSize="14" />
                            <TextBlock Text="Cleanup Orphans" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource CommandButtonStyle}"
                            Command="{x:Bind ViewModel.DeleteSelectedCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE738;" FontSize="14" />
                            <TextBlock Text="Delete Selected" />
                        </StackPanel>
                    </Button>
                    <ProgressRing Width="20" Height="20"
                                  IsActive="{x:Bind ViewModel.IsLoading}"
                                  Margin="8,0,0,0" />
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Style="{StaticResource StatusTextStyle}"
                           Text="{x:Bind ViewModel.StatusMessage}" />
            </Grid>
        </Border>

        <!-- Cache Items List -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Items}"
                  SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                  SelectionMode="Single"
                  Margin="0,8,0,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmCacheRow">
                    <Grid Padding="8,12" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Cache Icon -->
                        <FontIcon Glyph="&#xE7B8;"
                                  FontSize="20"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        <!-- Cache Item Info -->
                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                       Text="{x:Bind ContentId}" />
                            <TextBlock Style="{StaticResource ListItemSubtitleStyle}"
                                       Text="{x:Bind Location}"
                                       TextTrimming="CharacterEllipsis"
                                       MaxLines="1" />
                        </StackPanel>

                        <!-- Size & Version Info -->
                        <StackPanel Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    Spacing="2">
                            <Border Style="{StaticResource BadgeStyle}" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Bind ContentSize}"
                                           FontSize="12"
                                           FontWeight="SemiBold" />
                            </Border>
                            <TextBlock Text="{x:Bind ContentVer}"
                                       Style="{StaticResource ListItemSubtitleStyle}"
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

