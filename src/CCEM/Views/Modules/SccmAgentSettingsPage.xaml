<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmAgentSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmAgentSettingsViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}"
          RowSpacing="{ThemeResource MediumSpacing}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{ThemeResource PageHeaderMargin}">
            <TextBlock Style="{ThemeResource PageTitleStyle}"
                       Text="Agent Settings" />
            <TextBlock Style="{ThemeResource PageSubtitleStyle}"
                       Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1"
                Style="{ThemeResource InfoBarAreaStyle}">
            <StackPanel Orientation="Horizontal"
                        Spacing="{ThemeResource SmallSpacing}">
                <Button Command="{x:Bind ViewModel.RefreshCommand}"
                        Style="{ThemeResource PrimaryCommandButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
                <ProgressRing Width="20"
                              Height="20"
                              IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
            </StackPanel>
        </Border>

        <!-- Settings List -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Properties, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmAgentPropertyRow">
                    <Grid Padding="{ThemeResource SmallSpacing}"
                          ColumnSpacing="{ThemeResource LargeSpacing}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon FontSize="16"
                                  Glyph="&#xE713;"
                                  Opacity="0.6"
                                  VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1"
                                   Style="{ThemeResource ListItemTitleStyle}"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind Name}" />
                        <TextBlock Grid.Column="2"
                                   Opacity="0.85"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind Value}"
                                   TextWrapping="Wrap" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

