<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmLogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmLogsViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal"
                        Spacing="8">
                <TextBox Width="520"
                         Text="{x:Bind ViewModel.FilePath, Mode=TwoWay}"
                         PlaceholderText="Log file path (remote)" />
                <NumberBox Width="120"
                           Value="{x:Bind ViewModel.TailLines, Mode=TwoWay}"
                           SpinButtonPlacementMode="Inline"
                           Minimum="1"
                           Maximum="5000"
                           Header="Tail" />
                <Button Command="{x:Bind ViewModel.LoadCommand}"
                        Content="Load" />
                <ProgressRing Width="20"
                              Height="20"
                              IsActive="{x:Bind ViewModel.IsLoading}" />
            </StackPanel>
            <TextBlock Opacity="0.7"
                       Text="{x:Bind ViewModel.StatusMessage}" />
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Lines}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontFamily="Consolas"
                               Text="{Binding}"
                               TextWrapping="WrapWholeWords" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

