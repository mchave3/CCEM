<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmToolsViewModel">
    
    <Grid Padding="{StaticResource ContentPagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{StaticResource PageHeaderMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Text="Tools &amp; Scripts" />
            <TextBlock Style="{StaticResource PageSubtitleStyle}"
                       Text="Launch remote tools and execute PowerShell scripts on the target computer." />
        </StackPanel>

        <!-- Tabbed Content -->
        <Pivot Grid.Row="1">
            <!-- Tools Tab -->
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE90F;" FontSize="16" />
                        <TextBlock Text="Tools" />
                    </StackPanel>
                </PivotItem.Header>
                
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Tools Toolbar -->
                    <Border Style="{StaticResource InfoBarAreaStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallSpacing}">
                            <Button Style="{StaticResource PrimaryCommandButtonStyle}"
                                    Command="{x:Bind ViewModel.RunSelectedToolCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" FontSize="14" />
                                    <TextBlock Text="Run Selected Tool" />
                                </StackPanel>
                            </Button>
                            <ProgressRing Width="20" Height="20"
                                          IsActive="{x:Bind ViewModel.IsLoading}"
                                          Margin="8,0,0,0" />
                            <TextBlock Style="{StaticResource StatusTextStyle}"
                                       Text="{x:Bind ViewModel.StatusMessage}"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>
                    
                    <!-- Tools List -->
                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.Tools}"
                              SelectedItem="{x:Bind ViewModel.SelectedTool, Mode=TwoWay}"
                              SelectionMode="Single"
                              Margin="0,8,0,0">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:SccmToolRow">
                                <Grid Padding="8,12" ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <FontIcon Glyph="&#xE90F;"
                                              FontSize="20"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                                   Text="{x:Bind Title}" />
                                        <TextBlock Style="{StaticResource ListItemSubtitleStyle}"
                                                   Text="{x:Bind Description}"
                                                   TextWrapping="WrapWholeWords"
                                                   MaxLines="2" />
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2"
                                            Style="{StaticResource CommandButtonStyle}"
                                            Tag="{x:Bind}"
                                            Click="RunTool_Click"
                                            Content="Run" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>

            <!-- Scripts Tab -->
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE756;" FontSize="16" />
                        <TextBlock Text="Scripts" />
                    </StackPanel>
                </PivotItem.Header>
                
                <Grid Margin="0,16,0,0" RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Scripts Toolbar -->
                    <Border Style="{StaticResource InfoBarAreaStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SmallSpacing}">
                                <Button Style="{StaticResource CommandButtonStyle}"
                                        Command="{x:Bind ViewModel.RefreshScriptsCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE72C;" FontSize="14" />
                                        <TextBlock Text="Refresh" />
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource CommandButtonStyle}"
                                        Command="{x:Bind ViewModel.OpenScriptsFolderCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8B7;" FontSize="14" />
                                        <TextBlock Text="Open Folder" />
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource PrimaryCommandButtonStyle}"
                                        Command="{x:Bind ViewModel.RunSelectedScriptCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE768;" FontSize="14" />
                                        <TextBlock Text="Run Script" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="1"
                                       Style="{StaticResource StatusTextStyle}"
                                       Text="{x:Bind ViewModel.ScriptRoot}"
                                       Margin="0,8,0,0" />
                        </Grid>
                    </Border>

                    <!-- Scripts Split View -->
                    <Grid Grid.Row="1" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350" MinWidth="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Scripts List -->
                        <Border Style="{StaticResource CardStyle}" Padding="0">
                            <ListView ItemsSource="{x:Bind ViewModel.Scripts}"
                                      SelectedItem="{x:Bind ViewModel.SelectedScript, Mode=TwoWay}"
                                      SelectionMode="Single">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:SccmScriptRow">
                                        <Grid Padding="12,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <FontIcon Glyph="&#xE756;"
                                                      FontSize="16"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      Margin="0,0,12,0" />
                                            
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Style="{StaticResource ListItemTitleStyle}"
                                                           Text="{x:Bind Name}" />
                                                <TextBlock Style="{StaticResource ListItemSubtitleStyle}"
                                                           Text="{x:Bind RelativePath}" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>

                        <!-- Script Output -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="0">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Padding="16">
                                <TextBlock Text="{x:Bind ViewModel.ScriptOutput}"
                                           FontFamily="Cascadia Code, Consolas, Courier New"
                                           FontSize="12"
                                           TextWrapping="NoWrap"
                                           IsTextSelectionEnabled="True" />
                            </ScrollViewer>
                        </Border>
                    </Grid>

                    <!-- Info Footer -->
                    <Border Grid.Row="2" Style="{StaticResource InfoBarAreaStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE946;" FontSize="14"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Style="{StaticResource StatusTextStyle}"
                                       Text="Scripts are executed on the target computer via the active WSMan connection." />
                        </StackPanel>
                    </Border>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
