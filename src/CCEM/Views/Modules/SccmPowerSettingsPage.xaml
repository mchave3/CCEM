<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="CCEM.Views.Modules.SccmPowerSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:CCEM.ViewModels.Modules"
      mc:Ignorable="d"
      x:DataType="vm:SccmPowerSettingsViewModel">
    <Grid Padding="{ThemeResource ContentPagePadding}"
          RowSpacing="{ThemeResource MediumSpacing}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Margin="{ThemeResource PageHeaderMargin}">
            <TextBlock Style="{ThemeResource PageTitleStyle}"
                       Text="Power Settings" />
            <TextBlock Style="{ThemeResource PageSubtitleStyle}"
                       Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1"
                Style="{ThemeResource InfoBarAreaStyle}">
            <StackPanel Orientation="Horizontal"
                        Spacing="{ThemeResource SmallSpacing}">
                <Button Command="{x:Bind ViewModel.RefreshCommand}"
                        Style="{ThemeResource PrimaryCommandButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
                <ProgressRing Width="20"
                              Height="20"
                              IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
            </StackPanel>
        </Border>

        <!-- Power Settings List -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.Settings, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:SccmPowerSettingRow">
                    <Grid Padding="{ThemeResource SmallSpacing}"
                          ColumnSpacing="{ThemeResource MediumSpacing}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <FontIcon FontSize="24"
                                  Glyph="&#xEBB6;"
                                  Opacity="0.7" />
                        <StackPanel Grid.Column="1"
                                    Spacing="2">
                            <TextBlock Style="{ThemeResource ListItemTitleStyle}"
                                       Text="{x:Bind Name}" />
                            <TextBlock Style="{ThemeResource ListItemSubtitleStyle}"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Text="{x:Bind Guid}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2"
                                    Spacing="2"
                                    MinWidth="100">
                            <TextBlock Style="{ThemeResource ListItemSubtitleStyle}"
                                       Text="AC (Plugged)" />
                            <Border Style="{ThemeResource BadgeStyle}">
                                <TextBlock Text="{x:Bind ACValue}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="3"
                                    Spacing="2"
                                    MinWidth="100">
                            <TextBlock Style="{ThemeResource ListItemSubtitleStyle}"
                                       Text="DC (Battery)" />
                            <Border Style="{ThemeResource BadgeStyle}">
                                <TextBlock Text="{x:Bind DCValue}" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

