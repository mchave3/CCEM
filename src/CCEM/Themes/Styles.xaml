<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Layout -->
    <x:Double x:Key="TitleBarCompactHeight">48</x:Double>
    <Thickness x:Key="ContentPageMargin">40,48,0,0</Thickness>
    <Thickness x:Key="ContentPagePadding">24,24,24,24</Thickness>
    <Thickness x:Key="PageHeaderMargin">0,0,0,24</Thickness>
    <Thickness x:Key="SectionMargin">0,0,0,24</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>

    <!-- Spacing -->
    <x:Double x:Key="SmallSpacing">8</x:Double>
    <x:Double x:Key="MediumSpacing">12</x:Double>
    <x:Double x:Key="LargeSpacing">16</x:Double>
    <x:Double x:Key="ExtraLargeSpacing">24</x:Double>

    <!-- Typography -->
    <x:Double x:Key="PageTitleFontSize">28</x:Double>
    <x:Double x:Key="SectionTitleFontSize">18</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="CaptionFontSize">12</x:Double>

    <!-- Page Title Style -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource PageTitleFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Page Subtitle/Description Style -->
    <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- Section Title Style -->
    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SectionTitleFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <!-- Status Text Style -->
    <Style x:Key="StatusTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CaptionFontSize}" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Card Border Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource CardPadding}" />
    </Style>

    <!-- Toolbar Style -->
    <Style x:Key="ToolbarStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Spacing" Value="{StaticResource SmallSpacing}" />
        <Setter Property="Padding" Value="0,0,0,16" />
    </Style>

    <!-- Command Bar Button Style -->
    <Style x:Key="CommandButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <!-- Primary Command Button Style -->
    <Style x:Key="PrimaryCommandButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <!-- Data Grid Row Title Style -->
    <Style x:Key="ListItemTitleStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <!-- Data Grid Row Subtitle Style -->
    <Style x:Key="ListItemSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <!-- Badge/Tag Style -->
    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <!-- Info Bar Area Style -->
    <Style x:Key="InfoBarAreaStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

</ResourceDictionary>
